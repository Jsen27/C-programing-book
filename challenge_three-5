#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main(void) {
	int a = 0, b = 0;
	int n, ai;

	srand(time(NULL));

	printf("*************가위바위보*************\n\n\n");
	while (1)
	{
		printf("바위는 1, 가위는 2, 보는 3 : ");
		scanf_s("%d", &n);
		ai = rand() % 3 + 1;
		if (n == 1)
		{
			if (ai == 1)
			{
				printf("당신은 바위 선택, 컴퓨터는 바위 선택. 비겼습니다.\n\n\n");
				b++;
			}
			else if (ai == 2)
			{
				printf("당신은 바위 선택, 컴퓨터는 가위 선택. 당신이 이겼습니다.\n\n\n");
				a++;
			}
			else
			{
				printf("당신은 바위 선택, 컴퓨터는 보 선택. 당신이 패배하였습니다.\n\n\n");
				printf("당신의 전적 : %d승 %d무\n\n\n", a, b);
				printf("************************************");
				return 0;
			}
		}
		else if (n == 2)
		{
			if (ai == 2)
			{
				printf("당신은 가위 선택, 컴퓨터는 가위 선택. 비겼습니다.\n\n\n");
				b++;
			}
			else if (ai == 3)
			{
				printf("당신은 가위 선택, 컴퓨터는 보 선택. 당신이 이겼습니다.\n\n\n");
				a++;
			}
			else
			{
				printf("당신은 가위 선택, 컴퓨터는 바위 선택. 당신이 패배하였습니다.\n\n\n");
				printf("당신의 전적 : %d승 %d무\n\n\n", a, b);
				printf("************************************");
				return 0;
			}
		}
		else if (n == 3)
		{
			if (ai == 3)
			{
				printf("당신은 보 선택, 컴퓨터는 보 선택. 비겼습니다.\n\n\n");
				b++;
			}
			else if (ai == 1)
			{
				printf("당신은 보 선택, 컴퓨터는 바위 선택. 당신이 이겼습니다.\n\n\n");
				a++;
			}
			else
			{
				printf("당신은 보 선택, 컴퓨터는 가위 선택. 당신이 패배하였습니다.\n\n\n");
				printf("당신의 전적 : %d승 %d무\n\n\n", a, b);
				printf("************************************");
				return 0;
			}
		}
		else
			printf("잘못 입력하였습니다.\n\n\n");
	}

	return 0;
}
